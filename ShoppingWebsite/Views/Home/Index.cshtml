            <div class="row">
                @foreach (Product p in Model.Products)
                {
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            @if (p.Images.Count > 0)
                            {
                                <img src="~/Images/@p.Images[0].FileName" height="150" width="320">
                            }
                            else
                            {
                                <img src="http://placehold.it/320x150" alt="">
                            }
                            <div class="caption">
                                <h4 class="pull-right">@p.Price.ToString("C")</h4>
                                <h4>
                                    <a href="/home/product?id=@p.Id">@p.Title</a>
                                </h4>
                                <p>
                                    @*{@p.Description.Length > 100 ? @p.Description.Substring(0,100) : @p.Description }*@
